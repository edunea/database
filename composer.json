{
  "name": "tivins/database",
  "type": "library",
  "minimum-stability": "stable",
  "description": "A fluent, lightweight, and efficient PDO wrapper.",
  "keywords": [
    "php",
    "database",
    "pdo",
    "mysql",
    "query",
    "sqlite",
    "fluent"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Tivins"
    }
  ],
  "support": {
    "issues": "https://github.com/tivins/database/issues"
  },
  "autoload": {
    "psr-4": {
      "Tivins\\Database\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tivins\\Database\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "php-coveralls/php-coveralls": "^2.5"
  }
}
