{
  "name": "tivins/database",
  "type": "library",
  "description": "A fluent, lightweight, and efficient PDO wrapper.",
  "keywords": [
    "php",
    "database",
    "pdo"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Tivins"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Tivins\\Database\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tivins\\Database\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "php-coveralls/php-coveralls": "^2.5"
  }
}
